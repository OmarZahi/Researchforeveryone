<section class="program-section visuals-section" aria-label="Animated visualization of the research journey">
  <div class="visuals-grid">
    <div class="visuals-canvas" aria-hidden="true">
      <div class="orb orb-one"></div>
      <div class="orb orb-two"></div>
      <div class="orb orb-three"></div>
      <div class="spark spark-a"></div>
      <div class="spark spark-b"></div>
      <svg class="constellation" viewBox="0 0 480 320">
        <defs>
          <linearGradient id="grad" x1="0%" x2="100%" y1="0%" y2="0%">
            <stop offset="0%" stop-color="#2563eb"></stop>
            <stop offset="100%" stop-color="#38bdf8"></stop>
          </linearGradient>
        </defs>
        <path class="orbit" d="M20 200 C140 20, 300 20, 460 200" fill="none" stroke="url(#grad)" stroke-width="2" stroke-linecap="round" />
        <path class="orbit" d="M30 120 C180 260, 320 260, 450 120" fill="none" stroke="rgba(56,189,248,0.45)" stroke-width="1.5" stroke-dasharray="6 8" />
        <circle class="node" cx="80" cy="180" r="6"></circle>
        <circle class="node" cx="200" cy="90" r="6"></circle>
        <circle class="node" cx="320" cy="100" r="6"></circle>
        <circle class="node" cx="400" cy="210" r="6"></circle>
      </svg>
    </div>

    <div class="visuals-copy">
      <p class="eyebrow">Live Visualization</p>
      <h3>Progress tracker snapshot</h3>
