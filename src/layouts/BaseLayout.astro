---
const { title = 'Research for Everyone', description = 'Standardized safety training and operator-led lab sessions for students and early researchers.' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0B5FFF" />
    <link rel="icon" href="/logo.png" type="image/png" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <slot />
  </body>
</html>
