---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { programNav } from "../data/program";

const { title = "Research Fellowship", current = "overview" } = Astro.props;
---

<BaseLayout title={title}>
  <head>
    <link rel="stylesheet" href="/css/program.css" />
    <slot name="head" />
  </head>
  <Header active={current} />
  <main class="program-page">
    <nav class="program-subnav" aria-label="Program navigation">
      <ul>
        {programNav.map((link) => (
          <li>
            <a href={link.href} class={{ active: current === link.id }}>{link.label}</a>
          </li>
        ))}
      </ul>
    </nav>
    <slot />
  </main>
  <Footer />
</BaseLayout>
