---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
---
<BaseLayout title="Students | Research for Everyone" description="How to earn the Passport, what to expect, and outcomes for students.">
  <Header active="students" />
  <main>
    <Hero
      title="Learn safely, build your skills."
      subtitle="Complete the safety course to earn your Lab Readiness Passport. Then book insured, supervised sessions at partner labs."
      primaryCta={{ text: 'Get the Passport', href: '/passport' }}
      secondaryCta={{ text: 'Find a Session', href: '/sessions' }}
    />
    <section class="reveal">
      <div class="container">
        <h2>Why this matters</h2>
        <div class="features">
          <div class="feature"><h3>Build your portfolio</h3><p>Document your work to showcase to mentors and employers.</p></div>
          <div class="feature"><h3>Demonstrate readiness</h3><p>Show you understand safety protocols and are prepared.</p></div>
          <div class="feature"><h3>Unlock opportunities</h3><p>Create pathways to internships and research.</p></div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
