---
import GoogleLayout from "../../layouts/GoogleLayout.astro";
import ProgramSubNav from "../../components/program/ProgramSubNav.astro";
import MotionWrapper from "../../components/animations/MotionWrapper.astro";
import { detailItems, programTracks, partnerLogos, mapMarkers } from "../../data/program";
---

<GoogleLayout title="Research Fellowship • Overview">
  <ProgramSubNav current="overview" />

  <div class="max-w-7xl mx-auto px-6 pb-24">
    <!-- Hero -->
    <section class="py-16 md:py-24">
      <MotionWrapper animation="fade-up">
        <span class="text-blue-600 font-medium tracking-wide uppercase text-sm mb-4 block">Research Program • Egypt</span>
        <h1 class="text-5xl md:text-7xl font-medium tracking-tight text-gray-900 mb-8 leading-[1.1]">
          Research Fellowship — <br />
          <span class="text-gray-500">build real science in Egypt</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 max-w-3xl leading-relaxed mb-12">
          Students spend ten weeks in our studios and partner labs learning how to plan experiments, keep tidy notes, and share their findings with mentors and the public.
        </p>

        <div class="flex flex-wrap gap-4 mb-12">
          <div class="bg-white p-4 rounded-2xl border border-gray-100 shadow-sm min-w-[140px]">
            <strong class="block text-3xl font-medium text-gray-900">10+</strong>
            <span class="text-gray-500">Weeks</span>
          </div>
          <div class="bg-white p-4 rounded-2xl border border-gray-100 shadow-sm min-w-[140px]">
            <strong class="block text-3xl font-medium text-gray-900">3</strong>
            <span class="text-gray-500">Capstone Projects</span>
          </div>
          <div class="bg-white p-4 rounded-2xl border border-gray-100 shadow-sm min-w-[140px]">
            <strong class="block text-3xl font-medium text-gray-900">1:8</strong>
            <span class="text-gray-500">Mentor Ratio</span>
          </div>
        </div>

        <div class="flex flex-wrap gap-4">
          <a href="/programs/admissions" class="bg-blue-600 text-white px-8 py-4 rounded-full text-lg font-medium hover:bg-blue-700 transition-colors">
            Apply Now
          </a>
          <a href="#disciplines" class="bg-white text-blue-600 border border-blue-200 px-8 py-4 rounded-full text-lg font-medium hover:bg-blue-50 transition-colors">
            View Disciplines
          </a>
        </div>
      </MotionWrapper>
    </section>

    <!-- Program at a glance -->
    <section class="py-24 border-t border-gray-100">
      <div class="grid md:grid-cols-2 gap-16">
        <MotionWrapper animation="fade-up">
          <span class="text-blue-600 font-medium mb-4 block">Program at a glance</span>
          <h2 class="text-3xl md:text-4xl font-medium text-gray-900 mb-6">
            Built for curious students ready to work safely in real labs.
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed mb-8">
            We host weekly studio days in Cairo and rotate through partner labs across Egypt. Every fellow follows the same safety playbook, keeps clean notes, and learns how to explain their work in simple language.
          </p>
          <div class="flex flex-wrap gap-3">
            {detailItems.map((item) => (
              <span class="inline-flex items-center px-3 py-1 rounded-full bg-gray-100 text-sm text-gray-700">
                <strong class="font-medium mr-1">{item.label}:</strong> {item.value}
              </span>
            ))}
          </div>
        </MotionWrapper>

        <MotionWrapper animation="fade-up" delay={0.2}>
          <div class="bg-gray-50 p-8 rounded-3xl h-full">
            <h3 class="text-2xl font-medium text-gray-900 mb-4">Cohort snapshot</h3>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-center gap-3">
                <div class="w-1.5 h-1.5 rounded-full bg-blue-600"></div>
                36 fellows • 12 mentors • 8 partner labs
              </li>
              <li class="flex items-center gap-3">
                <div class="w-1.5 h-1.5 rounded-full bg-blue-600"></div>
                Studio HQ in Cairo + regional pop-ups
              </li>
              <li class="flex items-center gap-3">
                <div class="w-1.5 h-1.5 rounded-full bg-blue-600"></div>
                Demo day + patent clinic in week 10
              </li>
            </ul>
          </div>
        </MotionWrapper>
      </div>
    </section>

    <!-- Disciplines -->
    <section id="disciplines" class="py-24 border-t border-gray-100">
      <MotionWrapper animation="fade-up">
        <span class="text-blue-600 font-medium mb-4 block">Fields</span>
        <h2 class="text-3xl md:text-4xl font-medium text-gray-900 mb-6">Clear focus areas</h2>
        <p class="text-xl text-gray-600 mb-12 max-w-2xl">
          Fellows pick a track—biology, chemistry, electronics, environmental sensing, or data for science—and progress with mentor feedback.
        </p>
      </MotionWrapper>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {programTracks.map((track, i) => (
          <MotionWrapper animation="fade-up" delay={i * 0.1}>
            <a href={`/programs/details#${track.id}`} class="group block bg-white border border-gray-100 p-8 rounded-3xl hover:shadow-xl hover:-translate-y-1 transition-all duration-300 h-full">
              <span class="inline-block px-3 py-1 rounded-full bg-blue-50 text-blue-700 text-sm font-medium mb-6">
                {track.tag}
              </span>
              <h3 class="text-2xl font-medium text-gray-900 mb-3">{track.title}</h3>
              <p class="text-gray-600 mb-6">{track.blurb}</p>
              <span class="text-blue-600 font-medium group-hover:underline">Learn more →</span>
            </a>
          </MotionWrapper>
        ))}
      </div>
    </section>

    <!-- Locations (Map Placeholder) -->
    <section class="py-24 border-t border-gray-100">
      <MotionWrapper animation="fade-up">
        <h2 class="text-3xl md:text-4xl font-medium text-gray-900 mb-12">Our Locations</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {mapMarkers.map((marker) => (
            <div class="bg-gray-50 p-6 rounded-2xl">
              <h3 class="font-medium text-gray-900 mb-1">{marker.name}</h3>
              <p class="text-sm text-gray-500">X: {marker.x}%, Y: {marker.y}%</p>
            </div>
          ))}
        </div>
      </MotionWrapper>
    </section>

    <!-- Partners -->
    <section class="py-24 border-t border-gray-100">
      <MotionWrapper animation="fade-up">
        <span class="text-blue-600 font-medium mb-4 block">Brought to you by</span>
        <h2 class="text-3xl md:text-4xl font-medium text-gray-900 mb-12">Partners</h2>
        <div class="flex flex-wrap gap-8 items-center opacity-50 grayscale hover:grayscale-0 transition-all duration-500">
          {partnerLogos.map((logo) => (
            <div class="text-2xl font-bold text-gray-400">{logo}</div>
          ))}
        </div>
      </MotionWrapper>
    </section>
  </div>
</GoogleLayout>
