---
import GoogleLayout from "../../layouts/GoogleLayout.astro";
import ProgramSubNav from "../../components/program/ProgramSubNav.astro";
import MotionWrapper from "../../components/animations/MotionWrapper.astro";
import ContactForm from "../../components/ContactForm.astro";
import { admissionsSteps, aidOptions } from "../../data/program";
---

<GoogleLayout title="Research Fellowship • Admissions">
  <ProgramSubNav current="admissions" />

  <div class="max-w-7xl mx-auto px-6 pb-24">
    <section class="py-16 md:py-24">
      <MotionWrapper animation="fade-up">
        <span class="text-blue-600 font-medium mb-4 block">Admissions + Aid</span>
        <h1 class="text-5xl md:text-7xl font-medium tracking-tight text-gray-900 mb-8">
          Clear steps, fast replies
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 max-w-3xl leading-relaxed mb-12">
          Rolling cohorts accept 36 fellows. Once you submit the short form we reply inside ten days.
        </p>
      </MotionWrapper>

      <div class="grid lg:grid-cols-2 gap-16">
        <div class="space-y-12">
          <!-- Timeline -->
          <MotionWrapper animation="fade-up" delay={0.1}>
            <div class="bg-white p-8 rounded-3xl border border-gray-100 shadow-sm">
              <h3 class="text-2xl font-medium text-gray-900 mb-8">Application Process</h3>
              <div class="space-y-8 relative before:absolute before:left-[15px] before:top-2 before:bottom-2 before:w-0.5 before:bg-gray-100">
                {admissionsSteps.map((item) => (
                  <div class="relative pl-12">
                    <span class="absolute left-0 top-0 flex items-center justify-center w-8 h-8 rounded-full bg-blue-50 text-blue-600 font-bold text-sm border border-blue-100">
                      {item.step}
                    </span>
                    <strong class="block text-lg text-gray-900 mb-1">{item.title}</strong>
                    <p class="text-gray-600">{item.desc}</p>
                  </div>
                ))}
              </div>
            </div>
          </MotionWrapper>

          <!-- Aid Options -->
          <MotionWrapper animation="fade-up" delay={0.2}>
            <div class="bg-blue-50 p-8 rounded-3xl">
              <h3 class="text-2xl font-medium text-gray-900 mb-6">Aid options</h3>
              <ul class="space-y-6">
                {aidOptions.map((aid) => (
                  <li class="bg-white p-6 rounded-2xl shadow-sm">
                    <strong class="block text-lg text-gray-900 mb-1">{aid.title}</strong>
                    <p class="text-gray-600">{aid.info}</p>
                  </li>
                ))}
              </ul>
            </div>
          </MotionWrapper>
        </div>

        <div class="space-y-12">
          <!-- Week by Week -->
          <MotionWrapper animation="fade-up" delay={0.3}>
            <div class="bg-white p-8 rounded-3xl border border-gray-100 shadow-sm">
              <h3 class="text-2xl font-medium text-gray-900 mb-8">Week-by-week</h3>
              <div class="space-y-6">
                <div class="flex gap-4">
                  <div class="w-3 h-3 rounded-full bg-blue-600 mt-2 shrink-0"></div>
                  <div>
                    <strong class="block text-gray-900">Onboarding & Orientation</strong>
                    <span class="text-gray-500 text-sm">Week 0 — meet mentors, set goals, get tools</span>
                  </div>
                </div>
                <div class="flex gap-4">
                  <div class="w-3 h-3 rounded-full bg-blue-600 mt-2 shrink-0"></div>
                  <div>
                    <strong class="block text-gray-900">Foundations & Methods</strong>
                    <span class="text-gray-500 text-sm">Weeks 1–3 — reproducible workflows and experiment design</span>
                  </div>
                </div>
                <div class="flex gap-4">
                  <div class="w-3 h-3 rounded-full bg-blue-600 mt-2 shrink-0"></div>
                  <div>
                    <strong class="block text-gray-900">Project Development</strong>
                    <span class="text-gray-500 text-sm">Weeks 4–7 — implement, analyze, iterate with feedback</span>
                  </div>
                </div>
                <div class="flex gap-4">
                  <div class="w-3 h-3 rounded-full bg-blue-600 mt-2 shrink-0"></div>
                  <div>
                    <strong class="block text-gray-900">Capstone & Demo</strong>
                    <span class="text-gray-500 text-sm">Weeks 8–10 — publish, present, and receive badges</span>
                  </div>
                </div>
              </div>
            </div>
          </MotionWrapper>

          <!-- Contact Form -->
          <MotionWrapper animation="fade-up" delay={0.4}>
            <div class="bg-gray-900 text-white p-8 rounded-3xl">
              <h3 class="text-2xl font-medium mb-6">Send your interest</h3>
              <ContactForm />
            </div>
          </MotionWrapper>
        </div>
      </div>
    </section>
  </div>
</GoogleLayout>
